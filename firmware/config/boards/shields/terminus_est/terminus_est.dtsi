#include <dt-bindings/zmk/matrix_transform.h>
#include "terminus_est-layouts.dtsi"

/ {
	chosen {
		zmk,kscan = &kscan0;
		zmk,physical_layout = &physical_layout0;
	};

	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <20>;
		rows = <6>;

		map = <
RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6) RC(0,7)                                     RC(0,12) RC(0,13) RC(0,14) RC(0,15) RC(0,16) RC(0,17) RC(0,18)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6)             RC(1,9)                         RC(1,10) RC(1,12) RC(1,13) RC(1,14) RC(1,15) RC(1,16) RC(1,17) RC(1,18) RC(1,19)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6)             RC(2,9)                         RC(2,10) RC(2,12) RC(2,13) RC(2,14) RC(2,15) RC(2,16) RC(2,17) RC(2,18)
        RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(3,6) RC(3,7)     RC(3,9)                         RC(3,10) RC(3,12) RC(3,13) RC(3,14) RC(3,15) RC(3,16) RC(3,17) RC(3,18)
        RC(4,1) RC(4,2)         RC(4,5) RC(4,6) RC(4,7)                                     RC(4,11) RC(4,12) RC(4,13)         RC(4,16) RC(4,17)
                                        RC(5,6) RC(5,7) RC(5,8) RC(5,9)             RC(5,11) RC(5,12) RC(5,13)
		>;
	};

	kscan0: kscan {
		compatible = "zmk,kscan-gpio-matrix";

		diode-direction = "col2row";
		row-gpios
			= <&pro_micro 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   // ROW0 (GP10)
			, <&pro_micro 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   // ROW1 (GP11)
			, <&pro_micro 12 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   // ROW2 (GP12)
			, <&pro_micro 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   // ROW3 (GP13)
			, <&pro_micro 14 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   // ROW4 (GP14)
			, <&pro_micro 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   // ROW5 (GP15)
			;
	};
};